        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Proxima Nova', sans-serif;
        }

        .Faqmain {
            position: relative;
            padding: 6% 0 3%;
        }

        .faqImg {
            text-align: center;
        }

        .faqContent {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .Faqmain>h2 {
            text-align: center;
            margin: 4% 0;
            font-size: 30px;
            font-weight: 600;
        }


        .faqQ {
            display: flex;
            justify-content: space-between;
            padding: 0 3% 0 0;
        }

        .quetsion {
            display: flex;
            align-items: center;
            width: 95%;
        }

        .quetsion>img {
            width: 55px;
        }

        .faqNav {
            height: 550px;
            width: 55%;
            padding: 1% 1%;
            border-radius: 14px;
            border: 1px solid #7070704A;
            box-shadow: 0px 3px 6px #00000029;
        }

        .faqpart {
            height: 515px;
            width: 100%;
            padding: 1% 1%;
            overflow-y: scroll;
        }

        .faqImg>img {
            width: 75%;
        }

        ::-webkit-scrollbar {
            width: 2px;
        }

        ::-webkit-scrollbar-track {
            background: #7070707A;
        }

        ::-webkit-scrollbar-thumb {
            background: #71B8FF;
        }

        .quetsion>p {
            color: #000000;
            font-weight: 600;
            font-size: 18px;
            margin: 0 0 0 1%;
            cursor: pointer;

        }

        .faqA {
            height: 0px;
            overflow: hidden;
            margin: 2% auto 0;
            width: 82%;
            transition: all 0.3s;
        }

        .faqQA.active .faqA {
            border: 1px solid #707070;
            border-radius: 5px;

            padding: 1.5% 1.5%;
            height: 75px;
        }

        .faqQ>img {
            width: 15px;
            transition: all 0.5s;
        }

        .faqQA.active .faqQ>img {
            transform: rotate(180deg);
        }

        .faqA>p {
            color: #000000;
            opacity: 59%;
            font-size: 18px;
            line-height: 23px;
        }

        .faqQA {
            margin: 0 0 3%;
        }



