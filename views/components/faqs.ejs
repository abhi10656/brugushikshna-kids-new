        let faqQ = document.createElement('div');
        faqQ.classList.add('faqQ')
        // console.log(faqQ,"faqQ");

        let quetsion = document.createElement('div');
        quetsion.classList.add('quetsion');

        //number img
        let numimg = document.createElement('img');
        numimg.alt = "numbers"

        let arrow = document.createElement('img');
        arrow.alt = "arrow"
        arrow.src = "../../assests/faqs/downarrow.svg";

        //p question
        let questionP = document.createElement('p');

        //faqA
        let faqA = document.createElement("div");
        faqA.classList.add('faqA');

        //faqA p
        let answerP = document.createElement('p');

        //appending elements into question div
        quetsion.appendChild(numimg);
        quetsion.appendChild(questionP);

        //appending elements into faqQ div
        faqQ.appendChild(quetsion);
        faqQ.appendChild(arrow);

        //appending answer
        faqA.appendChild(answerP);

        //append q and a in faqQA
        faqQA.appendChild(faqQ);
        faqQA.appendChild(faqA);

        numimg.src = `${el.src}`;
        questionP.innerText = el.question;
        answerP.innerText = el.answer;
        faqpart.appendChild(faqQA);
    })


</script>

<script>
    let allfaqQA = document.querySelectorAll(".faqQA");
    allfaqQA.forEach((el) => {
        el.addEventListener('click', () => {
            if (el.classList.contains('active')) {
                el.classList.remove('active')
            } else {
                allfaqQA.forEach((e) => {
                    e.classList.remove('active');
                })
                el.classList.add('active');
            }
        })
    })
