                                <input name="conatctnumber" type="tel" placeholder="Number" pattern="[6-9]{1}[0-9]{9}"
                                    required>
                            </div>
                            <div class="eachDetails">
                                <label>Email Id</label>
                                <input name="email" type="email" placeholder="Email" required>
                            </div>
                        </section>
                        <section class="Details">
