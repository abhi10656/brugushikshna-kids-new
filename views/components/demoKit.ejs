<body>
    <script>
        //form validation
        $(document).ready(function () {
            let demokit = document.getElementById('demoFormDetails');
            demokit.addEventListener('submit', validate);
            let kidDetails = {}
            function validate(e)   {
                e.preventDefault();
                let validation = true;
                var x = document.getElementById('demoFormDetails');
                var inputtags = x.querySelectorAll('input,select,textarea');
                inputtags.forEach((el) => {
                    let element = el.value;
                    if (el.value === "") {
                        validation = false;
                    } else {
                        kidDetails[el.name] = element;
                    }
                    console.log(kidDetails);
                });

                if (validation) {
                    $.ajax({
                        url: "",
                        method:POST,
                        data: kidDetails,
                        error: function (result) {
                            console.log('result', result)
                        },
                        statusCode: {
                            200: function (result) {
                                alert("Form is Submitted")
                                //form resetting
                                inputtags.forEach((el)=>{
                                    el.value = "";
                                })
                            }
                        },
                    })
                } else {
                    alert("Fill all the details")
                }
            }
        })  
    </script>

    <div class="demoMainBlack" id="demokitForm" style="display: none;">
        <div class="demoFormpart">
            <h2>Get your demo kit form</h2>
            <img id="demoKitClose" class="democross" src="../../assests/demokit/demoCross.svg" alt="closeImage">
            <div class="demoUserDetails">
                <form id="demoFormDetails">
                    <div class="demoDetails">

                        <section class="Details">
